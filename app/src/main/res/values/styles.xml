        <item name="android:textSize">@dimen/_9sdp</item>
    </style>
    <style name="MyTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/reply_red_400</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabIndicatorColor">@color/reply_red_400</item>
        <item name="tabBackground">?attr/tabSelectedTextColor</item>
    </style>
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/reply_red_400</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>