<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor" tools:tagetApi="lollipop">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="TextWhite13" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
    <style name="TextBlack13" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/black_800</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextBlack15" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/black_800</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="TextWhite17" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>
    <style name="TextWhite15" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="TextBlack11" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/black_800</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>
    <style name="TextBlack9" parent="android:Widget.TextView">
        <item name="fontFamily">@font/work_sans</item>
