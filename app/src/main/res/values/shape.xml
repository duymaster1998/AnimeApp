<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.Anime.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_radius</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.Anime.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_radius</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.Anime.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_radius</item>
    </style>
    <dimen name="small_radius">@dimen/_6sdp</dimen>
    <dimen name="medium_radius">@dimen/_16sdp</dimen>
    <dimen name="large_radius">@dimen/_26sdp</dimen>
</resources>