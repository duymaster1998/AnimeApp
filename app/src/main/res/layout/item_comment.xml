<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_login" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextBlack11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_toEndOf="@+id/avatar" />

    <TextView
        android:id="@+id/tv_comment"
        style="@style/TextBlack11"
        android:textColor="@color/reply_black_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment"
        android:layout_alignStart="@+id/tv_comment"
        android:layout_alignEnd="@+id/tv_comment">

        <TextView
            style="@style/TextBlack11"
            android:textColor="@color/reply_black_40"
            android:id="@+id/tv_date"
            android:maxLength="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_toStartOf="@+id/iv_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_like"
                android:src="@drawable/ic_like"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_like"
                style="@style/TextBlack11"
                android:textColor="@color/reply_black_40"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:textAlignment="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cmt"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/iv_report"
            android:src="@drawable/ic_comment" />

        <ImageView
            android:id="@+id/iv_report"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_report" />
    </RelativeLayout>

