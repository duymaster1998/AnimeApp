<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardBackgroundColor="#1AF02A0C"
    app:cardElevation="@dimen/_0sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_chapter"
            style="@style/TextBlack13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="@string/season"
            android:textColor="@color/black_800" />

        <TextView
            android:id="@+id/tv_episode_num"
            style="@style/TextBlack13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/tv_chapter"
            android:textColor="@color/black_800" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextBlack13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/tv_episode_num"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/episode"
                style="@style/TextBlack11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56" />

            <TextView
                style="@style/TextBlack11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/episode" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
