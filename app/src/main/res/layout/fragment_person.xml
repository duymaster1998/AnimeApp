<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/ic_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layout"
        android:id="@+id/layout_2"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextBlack15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/click_to_login"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/layout_2"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_above="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/item_divider_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp" />

            <TextView
                style="@style/TextBlack11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawablePadding="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/my_profile"
                app:drawableStartCompat="@drawable/ic_profile" />

            <TextView
                style="@style/TextBlack11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawablePadding="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:text="@string/about_us"
                app:drawableStartCompat="@drawable/ic_about" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/logout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/reply_blue_50"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/_80sdp">
        <TextView
            android:background="@color/white_50"
            android:paddingVertical="@dimen/_10sdp"
            android:id="@+id/tv_logout"
            style="@style/TextBlack13"
            android:text="@string/logout"
            android:textColor="@color/color_orange_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_20sdp"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>